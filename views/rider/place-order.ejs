
  <section id="place-order" class="flex-wrap d-flex justify-content-center align-items-center">
    <div class="box py-4 px-3 mx-4 mt-5 mb-2">
      <div class="d-flex justify-content-center align-items-center flex-column">
        <h3>Vehicle Info.</h3>
        <table>
          <tr>
            <td colspan="2"><span class="bold">Vehicle Owner : </span>
              <%= owner.username %>
            </td>
          </tr>
          <tr>
            <td>
              <span class="bold">Vehicle : </span>
              <%= data.VehicleName %>
            </td>
            <td>
              <span class="bold">Model : </span>
              <%= data.Model%>
            </td>
          </tr>
          <tr>
            <td>
              <span class="bold">Type : </span>
              Four Wheeler
            </td>
            <td>
              <span class="bold">Gear : </span>
              Automatic
            </td>
          </tr>
          <tr>
            <td>
              <span class="bold">Fuel : </span>
              <%= data.Fuel%>
            </td>
            <td>
              <span class="bold">Travelled : </span>
              <%= data.Travelled%> kms
            </td>
          </tr>
          <tr>
            <td><span class="bold">Mileage : </span>
              <%= data.Mileage%> km/l
            </td>
            <td><span class="bold">Vehicle Number : </span>
              <%= data.VehicleNumber %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <form action="/rider-profile/confirm-order" method="post"
     class="d-flex align-items-center flex-column py-4 px-4 m-3">

    <% if (messages.error) { %>
      <span class="text-red-500 text-sm"><%= messages.error %></span>
    <% } %>

     <input type="hidden" name="vehicle" value="<%= JSON.stringify(data) %> ">

      From : <input type="date" class="form-control w-75 my-1" name="start">
      To : <input type="date" class="form-control w-75 my-1" name="end">
      <div>
        <label for="location" class="mt-3">Enter your delivery address : </label>
        <textarea class="form-control my-2" name="location" id="location" rows="3"></textarea>
      </div>
      <div>
        <label for="mobile" class="mt-2">Enter Mobile Number : </label>
        <input type="number" class="form-control mt-2 mb-3" id="mobile" name="mobile">
      </div>
      <div>
        <button type="submit" class="btn-custom m-2">Place Order</button>
        <button class="btn-custom m-2" onclick="location.href = '/rider-profile';">Cancel</button>
      </div>
    </form>
  </section>
