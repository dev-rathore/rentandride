
  <section id="all-rides">
    
    <!-- If zero vehicles are rented then it will show no rides yet -->

    <div class="d-flex justify-content-center flex-column align-items-center">
      <% if (data['h'].length === 0) {%>
        <h2 class="mt-3 mb-4 text-center highlight">No Rides Yet</h2>
      <% } else { %>
        <h2 class="my-3 text-center highlight">List of all Vehicles Rented</h2>
      <% } %>
    </div>

    <div class="container-fluid">
      <div class="row justify-content-center">
        <% for(var i=0; i<data['h'].length; i++) {%>
        <div class="col-md-4 col-sm-10 box pt-3 pb-4 m-3">
          <div class="d-flex justify-content-center align-items-center">
            <table>
              <tr>
                <td>
                  <span class="bold">Vehicle : </span>
                  <%= data['a'][i].VehicleName %>
                </td>
                <td>
                  <span class="bold">Vehicle Owner : </span>
                  <%= data['b'][i] %>
                </td>
              </tr>
              <tr>
                <td>
                  <span class="bold">Type : </span>
                  <% if(data['a'][i].Type === 2) { %>
                      Two
                  <% } else { %>
                      Four
                  <% } %>
                  Wheeler
                </td>
                <td>
                  <span class="bold">Status : </span>
                  <%= data['h'][i].status %>
                </td>
              </tr>
              <tr>
                <td>
                  <span class="bold">Placed At : </span>
                  <%= moment(data['h'][i].createdAt).format('hh:mm') %>
                </td>
                <td>
                  <span class="bold">Booked On : </span>
                  <%= moment(data['h'][i].createdAt).format('DD-MM-YYYY') %>
                </td>
              </tr>
              <tr>
                <td>
                  <span class="bold">Bill : </span>
                  &nbsp;<i class="fa-solid fa-indian-rupee-sign"></i>
                  <%= data['h'][i].bill %>
                </td>
                <td>
                  <span class="bold">Booked For : </span>
                  <%= data['h'][i].time %> Days
                </td>
              </tr>
              <tr>
                <td colspan="2" class="text-center">
                  <button onclick="location.href = `/rider-profile/all-orders/single-order/<%= data['h'][i]._id %>`;" class="btn-outline-custom white">
                    Order Details</button> 

                </td>
                
              </tr>
            </table>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </section>